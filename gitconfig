[user]
  name = jgittler 
  email = jason.gittler@gmail.com
[alias]
  pshh = push origin HEAD
  co = checkout
  com = checkout master
  cm = commit
  st = status
  br = branch
  df = diff --color
  dfom = diff master --color
  pl = pull
  ps = push
  aa = add --all --intent-to-add
  ad = add -p
  rb = rebase origin/master
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  su = submodule update --init --recursive
  pim = pull origin master
  stl = stash list
  sta = "!f() { git stash apply stash@{$1}; }; f"
  std = "!f() { git stash drop stash@{$1}; }; f"
[push]
  default = current
[core]
	editor = vim
  autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
  ui = auto
[color "branch"]
  current = green bold
  local = white
  remote = yellow
[color "diff"]
  meta = "190 bold"
  commit = green
  frag = "165 bold"
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 238"
  newNormal = green bold
  newHighlight = "green bold 238"
[color "status"]
  added = "10 bold"
  changed = "45 bold"
  untracked = red bold
  unmerged = white red bold
[branch "master"]
  remote = origin
  merge = refs/heads/master
