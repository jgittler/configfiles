# utility
alias ls='ls -GF'
alias lh='ls -a'
alias la='ls -lhrSa'
alias vz='vim ~/dotfiles/zshrc'                                                         
alias vv='vim ~/dotfiles/vimrc'                                                         
alias vg='vim ~/dotfiles/gitconfig'
alias vt='vim ~/dotfiles/tmux.conf'
alias vp='vim ~/dotfiles/psqlrc'
alias v='vim'
alias reload='source ~/.zshrc'

# rails
alias be='bundle exec'                                                          
alias br='bin/rails'                                                          
alias brs='bin/rspec'                                                          
alias brk='bin/rake'                                                          
alias dbreset='bin/rake -t db:drop db:create'

# elixir
alias miex='iex -S mix'

# js
alias jsc='/System/Library/Frameworks/JavaScriptCore.framework/Versions/Current/Resources/jsc'

# tmux
alias muxi='tmuxinator'

# services
alias startredis='redis-server /usr/local/etc/redis.conf'
alias startmem='/usr/local/opt/memcached/bin/memcached'
